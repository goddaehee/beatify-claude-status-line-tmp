{
  "name": "beatify-claude-status-line",
  "version": "1.0.0",
  "type": "module",
  "description": "Beautiful status line with {god} tag, random emoji, context usage, API rate limits, and cost tracking",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx esbuild scripts/statusline.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "test": "echo '{\"model\":{\"display_name\":\"Opus\"},\"workspace\":{\"current_dir\":\"/test/myproject\"},\"context_window\":{\"context_window_size\":200000,\"current_usage\":{\"input_tokens\":50000,\"cache_creation_input_tokens\":0,\"cache_read_input_tokens\":0}},\"cost\":{\"total_cost_usd\":0.5}}' | node dist/index.js"
  },
  "keywords": [
    "claude-code",
    "statusline",
    "context",
    "rate-limits",
    "beautiful"
  ],
  "author": "goddaehee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:goddaehee/beatify-claude-status-line.git"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0"
  }
}
